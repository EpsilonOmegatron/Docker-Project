<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reservations</title>
  </head>
  <style>
    td,
    th {
      border: 1px solid black;
      height: 25px;
      text-align: center;
      padding: 5px;
    }
  </style>
  <body
    style="
      border: 2px solid;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 10px;
      text-align: center;
    "
  >
    <label style="font-size: xx-large">Reservations</label><br /><br />
    <table style="border-collapse: collapse; width: 100%;">
      <tr>
        <th>Doctor</th>
        <th>Date</th>
        <th>Hour</th>
        <th>Action</th>
      </tr>
      <% results.forEach(function(result) { %>
      <tr>
        <td><%= result.doctorName %></td>
        <td><%= result.date %></td>
        <td><%= result.time %></td>
        <td>
          <a href="/user/delete/<%= result.id %>">Delete</a>
        </td>
      </tr>
      <% }); %>
    </table>
    <br /><br />
    <a href="/user/<%= username%>" style="font-size: x-large;">Back</a>
  </body> 
</html>
