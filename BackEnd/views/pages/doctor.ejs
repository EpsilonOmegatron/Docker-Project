<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Doctor</title>
  </head>
  <style>
    td,
    th {
      border: 1px solid black;
      height: 25px;
      text-align: center;
    }
  </style>
  <body
    style="
      border: 2px solid;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 10px;
    "
  >
    <label style="font-size: xx-large">Welcome, Dr. <%= username %>!</label>
    <a href="/logout" style="font-size: small">Logout</a><br /><br />
    <label style="font-size: large">Your slots:</label>
    <table style="border-collapse: collapse; width: 100%">
      <tr>
        <th>Date</th>
        <th>Hour</th>
        <th>Action</th>
      </tr>
      <% results.forEach(function(result) { %>
      <tr>
        <td><%= result.date %></td>
        <td><%= result.time %></td>
        <td>
          <a href="/user/delete/<%= result.id %>">Delete</a>
        </td>
      </tr>
      <% }); %>
    </table>
    <br /><br />
    <form style="text-align: center" action="/user/<%= username %>" method="post">
      <label for="date">Date:</label>
      <input type="date" id="date" name="date" required /><br /><br />
      <label for="time">Time:</label>
      <input type="time" id="time" name="time" required /><br /><br />
      <button type="submit" style="width: 50%">Add Slot</button>
    </form>
  </body>
</html>
